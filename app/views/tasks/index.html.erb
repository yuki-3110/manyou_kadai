<h1>タスク一覧</h1>

<table>
  <tr>
    <th>タスク名</th>
    <th>タスク詳細</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先度</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
  </tr>
<% end %>
</table>

<%= link_to 'タスクを追加する', new_task_path %>