<!DOCTYPE html>
<html>
  <head>
    <title>Taskapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key,value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <nav class="navbar navbar-expand-lg navbar-light bg-primary ">
      <div class="container-fluid">
        <a class="navbar-brand text-white">taskapp</a>

          <ul class="d-flex navbar-nav me-auto mb-2 mb-lg-0">
            <% if logged_in? %>
              <li class="nav-item"><%= link_to "Profile", user_path(current_user.id), class: 'text-white nav-link' %></li>
              <li class="nav-item"><%= link_to "Logout", session_path(current_user.id), class: 'text-white nav-link', method: :delete %></li>
            <% else %>
              <li class="nav-item"><%= link_to "Sign up", new_user_path, class: 'text-white nav-link' %></li>
              <li class="nav-item"><%= link_to "Login", new_session_path, class: 'text-white nav-link' %></li>
            <% end %>
          </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
