<h1><%=t('labels.index.labels')%></h1>

<table>
  <thead>
    <tr>
      <th><%=t('labels.index.name')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= link_to t("labels.index.link_to.Destroy"), label, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("labels.index.link_to.NewLabel"), new_label_path %>